<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkerForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2ea8df">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_arrow_back"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:tint="@color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Attendence Form"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"/>
        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_dots"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_30sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/nunitosans_bold_2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"/>

                <TextView
                    android:id="@+id/at_worker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/attendence_formone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spiiner_border"
                android:layout_marginTop="@dimen/_40sdp"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:background="@drawable/back_three"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"

                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:fontFamily="@font/nunitosans_bold_2"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/at_datefone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:gravity="end"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Status :-"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunitosans_bold_2"/>
                    <TextView
                        android:id="@+id/attendence_status"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="Present"
                        android:gravity="center"
                        android:background="@drawable/back_two"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunitosans_semibold"
                        android:textSize="@dimen/_14sdp"
                        android:paddingVertical="@dimen/_3sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Type :-"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunitosans_bold_2"/>
                    <TextView
                        android:id="@+id/attendence_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunitosans_regular_2"
                        android:textSize="@dimen/_14sdp"
                        android:paddingVertical="@dimen/_3sdp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attendence_formtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/spiiner_border"
                android:layout_marginVertical="@dimen/_20sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendence"
                    android:background="@drawable/back_three"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/at_dateftwo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12/12/2012"
                    android:gravity="end"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/at_timeftwo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="00.00 AM"
                    android:gravity="end"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="Status:-"
                android:layout_marginTop="@dimen/_20sdp"/>
                <Spinner
                    android:id="@+id/af_spinnerstatus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/back_two"
                    android:hint="--"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="Presence Type:-"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

                <Spinner
                    android:id="@+id/pp_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="@dimen/_4sdp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/back_two"
                    android:hint="--"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20sdp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_8sdp"
                android:paddingVertical="@dimen/_8sdp">

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:background="#2ea8df"
                    android:gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:textAllCaps="true"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>